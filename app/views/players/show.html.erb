<style>
.align-self-start {
  margin-top: 30px;
}
</style>

<div class="container-fluid">
  <div class="row" style="">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 text-center align-self-start">
      <h1 class="heading">Active NBA Players' Best Game</h1>
    <div class="search">
      <%= form_tag(players_search_path, method: "post", autocomplete: "off") do %>
        <input type="text" name="playerName" class="searchTerm" placeholder="<%= @player.name %>" id="playerInput">
        <%= button_to players_search_path, method: :post, class: "searchButton" do %>
          <i class="fa fa-search"></i>
        <% end %>
      <% end %>
    </div>
    </div>
    <div class="col-sm-2"></div>
  </div>

  <!-- Table Row -->
  <div class="row" style="margin: 40px 0px;">
    <div class ="col-sm-6">
      <div class="row vertical-align" style="padding-top: 20px;">
        <div class="col-sm-4 text-center">
          <div class="player-profile-image">
              <img src="<%= @player.headshot %>" style="height:128px;width:175px; border-radius: 100%; border: 1pt solid gray;" class="img-circle" alt="<%= @player.name %>'s Headshot">
          </div>
        </div>
        <div class="col-sm-8 text-left" style="padding: 0px 30px">
          <h1><%= @player.name %></h1>
          <h4><%= @player.position %> on <%= @player.team %></h4>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-12 text-center">
          <% if @career_average %>
          <h2>Career Averages</h2>
          <table class="table table-dark" style="margin-top: 20px">
            <thead>
              <thread>
                <tr>
                  <td>PTS</td>
                  <td>REB</td>
                  <td>AST</td>
                  <td>STLS</td>
                  <td>BLKS</td>
                  <td>TOS</td>
                  <td>FG%</td>
                </tr>
              </thread>
            </thead>
            <tbody id="overall_stat_row">
              <td><%= @career_average.points %></td>
              <td><%= @career_average.rebounds %></td>
              <td><%= @career_average.assists %></td>
              <td><%= @career_average.steals %></td>
              <td><%= @career_average.blocks %></td>
              <td><%= @career_average.turnovers %></td>
              <td><%= @career_average.fgp %></td>
            </tbody>
          </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <table class="table table-dark text-center" id="gamesTable">
      <thead>
        <tr>
          <th onclick="sortTable(0)">Date</th>
          <th onclick="sortTable(1)">Opponent</th>
          <th onclick="sortTable(2)">Result</th>
          <th onclick="sortTable(3)">Mins</th>
          <th onclick="sortTable(4)">FGM-A</th>
          <th onclick="sortTable(5)">REBS</th>
          <th onclick="sortTable(6)">ASTS</th>
          <th onclick="sortTable(7)">STLS</th>
          <th onclick="sortTable(8)">BLKS</th>
          <th onclick="sortTable(9)">TOs</th>
          <th onclick="sortTable(10)">Points</th>
          <th onclick="sortTable(11)">Game Score</th>
          <th>Highlights</th>
        </tr>
      </thead>
      <tbody id="full_stat_table">
        <% @games.each do |g| %>
        <tr>
          <td><a href="<%= g.boxscore %>" target="_blank" style="color: #02e6ec;"><%= g.date.strftime("%b %d, %Y") %></td>
          <td><%= g.opponent %></td>
          <td><%= g.score %></td>
          <td><%= g.minutes %></td>
          <td><%= g.fgma %></td>
          <td><%= g.rebounds %></td>
          <td><%= g.assists %></td>
          <td><%= g.steals %></td>
          <td><%= g.blocks %></td>
          <td><%= g.turnovers %></td>
          <td><%= g.points %></td>
          <td><%= g.metric %></td>
          <td>
            <% if g.links.length > 0 %>
            <a href="<%= g.links.first.url %>" style="color: white;" target="_blank"><i class="fa fa-youtube-play fa-2x" aria-hidden="true"></i></a>
            <% end %>
          </td>
        </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>


